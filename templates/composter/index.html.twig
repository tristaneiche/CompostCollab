{% extends 'base.html.twig' %}

{% block title %}Hello ComposteController!{% endblock %}

{% block body %}
    <div>
        <iframe class="maps" src="https://www.google.com/maps/embed?pb=!1m16!1m12!1m3!1d55135.66543835976!2d-0.6056153451746114!3d44.832223997896406!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!2m1!1spoubelle!5e0!3m2!1sfr!2sfr!4v1698133310934!5m2!1sfr!2sfr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
{% endblock %}
{% block sidebar %}
    {% for composter in composters %}
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4" style="text-align: center;">
                    <img src="{{ asset(composter.getImage) }}" class="img-fluid rounded-start img-thumbnail" alt="{{composter.getShortDescription}}">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{composter.getShortDescription}}</h5>
                        <p class="card-text">{{composter.getLongDescription}}</p>
                        <p class="card-text"><small class="text-body-secondary">{{composter.getLocalisation}}</small></p>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}