{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
<div class="example-wrapper login-container">
    {% if error %}
        <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <h1 class="login-title">Connexion ! âœ…</h1>

    <form action="{{ path('login') }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        
        <label for="username">Nom d'utilisateur:</label>
        <input class="login-input" type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password">Mot de passe:</label>
        <input class="login-input" type="password" id="password" name="_password"/>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <button class="login-button" type="submit">Se connecter</button>
    </form>
    {{ include('/layout/footer_form.html.twig') }}
</div>
{% endblock %}

{% block sidebar %}
    {{ include('/layout/pub.html.twig') }}
{% endblock %}