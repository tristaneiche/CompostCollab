{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper login-container">
    {% if error %}
        <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <h1 class="login-title">Connexion ! ✅</h1>

    <form action="{{ path('login') }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        
        <label for="username">Nom d'utilisateur:</label>
        <input class="login-input" type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password">Mot de passe:</label>
        <input class="login-input" type="password" id="password" name="_password"/>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <button class="login-button" type="submit">Se connecter</button>
    </form>
    <div class="login-links">
        <a href="#">Mot de passe oublié</a>
        <span>|</span>
        <a href="#">S'inscrire</a>
    </div>
</div>
{% endblock %}
